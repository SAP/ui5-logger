{
	"name": "@ui5/logger",
	"version": "3.0.1-alpha.2",
	"description": "UI5 Tooling - Internal Logger",
	"author": {
		"name": "SAP SE",
		"email": "openui5@sap.com",
		"url": "https://www.sap.com"
	},
	"license": "Apache-2.0",
	"keywords": [
		"openui5",
		"sapui5",
		"ui5",
		"build",
		"development",
		"tool"
	],
	"type": "module",
	"exports": "./index.js",
	"engines": {
		"node": ">= 16.13.2",
		"npm": ">= 8"
	},
	"scripts": {
		"test": "npm run lint && npm run jsdoc-generate && npm run coverage && npm run depcheck",
		"test-azure": "npm run coverage-xunit",
		"lint": "eslint ./",
		"unit": "rimraf test/tmp && cross-env NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\"",
		"unit-verbose": "rimraf test/tmp && cross-env UI5_LOG_LVL=verbose NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\" --verbose --serial",
		"unit-watch": "rimraf test/tmp && cross-env NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\" --watch",
		"unit-nyan": "rimraf test/tmp && cross-env NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\" --tap | tnyan",
		"unit-xunit": "rimraf test/tmp && cross-env NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\" --tap | tap-xunit --dontUseCommentsAsTestNames=true > test-results.xml",
		"unit-inspect": "cross-env UI5_LOG_LVL=verbose NODE_NO_WARNINGS=1 ava --node-arguments=\"--loader=esmock\" debug --break",
		"coverage": "c8 npm run unit",
		"coverage-xunit": "c8 --reporter=text --reporter=text-summary --reporter=cobertura npm run unit-xunit",
		"jsdoc": "npm run jsdoc-generate && open-cli jsdocs/index.html",
		"jsdoc-generate": "jsdoc -c ./jsdoc.json -t $(node -p 'path.dirname(require.resolve(\"docdash\"))') ./lib/ || (echo 'Error during JSDoc generation! Check log.' && exit 1)",
		"jsdoc-watch": "npm run jsdoc && chokidar \"./lib/**/*.js\" -c \"npm run jsdoc-generate\"",
		"preversion": "npm test",
		"version": "git-chglog --sort semver --next-tag v$npm_package_version -o CHANGELOG.md && git add CHANGELOG.md",
		"postversion": "git push --follow-tags",
		"release-note": "git-chglog --sort semver -c .chglog/release-config.yml v$npm_package_version",
		"depcheck": "depcheck --ignores docdash"
	},
	"files": [
		"index.js",
		"CHANGELOG.md",
		"CONTRIBUTING.md",
		"jsdoc.json",
		"lib/**",
		"LICENSES/**",
		".reuse/**"
	],
	"ava": {
		"files": [
			"test/lib/**/*.js"
		]
	},
	"c8": {
		"reporter": [
			"lcov",
			"text",
			"text-summary"
		],
		"exclude": [
			"docs/**",
			"jsdocs/**",
			"coverage/**",
			"test/**",
			".eslintrc.cjs",
			"jsdoc-plugin.cjs"
		],
		"check-coverage": true,
		"statements": 90,
		"branches": 90,
		"functions": 90,
		"lines": 90,
		"watermarks": {
			"statements": [
				70,
				90
			],
			"branches": [
				70,
				90
			],
			"functions": [
				70,
				90
			],
			"lines": [
				70,
				90
			]
		},
		"all": true
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:SAP/ui5-logger.git"
	},
	"dependencies": {
		"npmlog": "^6.0.2"
	},
	"devDependencies": {
		"ava": "^4.3.1",
		"c8": "^7.12.0",
		"chokidar-cli": "^3.0.0",
		"cross-env": "^7.0.3",
		"depcheck": "^1.4.3",
		"docdash": "^1.2.0",
		"eslint": "^8.7.0",
		"eslint-config-google": "^0.14.0",
		"eslint-plugin-ava": "^13.2.0",
		"eslint-plugin-jsdoc": "^37.6.3",
		"esmock": "^1.8.9",
		"jsdoc": "^3.6.7",
		"open-cli": "^6.0.1",
		"rimraf": "^3.0.2",
		"sinon": "^14.0.0",
		"tap-nyan": "^1.1.0",
		"tap-xunit": "^2.4.1"
	}
}
